{
  "name": "commentpotato_server",
  "version": "1.0.0",
  "private": true,
  "description": "CommentPotato server is a tool that allows you to automatically fetch the most popular video and the most liked comment on a video from YouTube.",
  "main": "src/server.ts",
  "author": "tlcada",
  "keywords": [
    "Twitter API",
    "Instgram",
    "YouTube API",
    "CommentPotato",
    "YouTube best comments",
    "Canvas",
    "YouTube video creator",
    "AWS S3"
  ],
  "scripts": {
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "nodemon",
    "generate-video": "cross-env VIDEO_MODE=on nodemon",
    "test": "cross-env NODE_ENV=test nyc mocha --timeout 20000 -r ts-node/register src/**/__tests__/*.ts src/config/**/__tests__/*.ts --exit"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/**/*.ts",
      "config/**/*.ts"
    ],
    "ignore": [
      "**/__tests__/*"
    ],
    "ext": "ts",
    "exec": "cross-env NODE_ENV=development ts-node src/server.ts"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts",
      "config/**/*.ts"
    ],
    "exclude": [
      "**/__tests__/*"
    ],
    "reporter": [
      "html"
    ]
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@ffprobe-installer/ffprobe": "^1.0.12",
    "@koa/cors": "^2.2.3",
    "@types/archiver": "^3.1.0",
    "@types/chai": "^4.2.8",
    "@types/chai-fs": "^2.0.2",
    "@types/chai-http": "^4.2.0",
    "@types/csv-parse": "^1.2.2",
    "@types/faker": "^4.1.8",
    "@types/fetch-mock": "^7.3.2",
    "@types/fs-extra": "^8.0.1",
    "@types/is-stream": "^2.0.0",
    "@types/jsonfile": "^5.0.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.0.52",
    "@types/koa-basic-auth": "^2.0.3",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.12",
    "@types/node-fetch": "^2.5.4",
    "@types/node-schedule": "^1.3.0",
    "@types/twemoji": "^12.1.0",
    "@types/twitter": "^1.7.0",
    "@types/twitter-text": "^2.0.0",
    "@types/write": "^2.0.0",
    "archiver": "^3.1.1",
    "aws-sdk": "^2.622.0",
    "canvas": "^2.8.0",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "chai-fs": "^2.0.0",
    "chai-http": "^4.3.0",
    "cross-env": "^6.0.3",
    "csv-parse": "^4.8.2",
    "csv-string": "^3.1.7",
    "csv-write-stream": "^2.0.0",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "fetch-mock": "^8.3.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^8.1.0",
    "is-stream": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonfile": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-basic-auth": "^4.0.0",
    "koa-jwt": "^3.6.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "koa2-ratelimit": "^0.9.0",
    "mocha": "^6.2.2",
    "node-fetch": "^2.6.0",
    "node-schedule": "^1.3.2",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "twemoji": "^12.1.4",
    "twitter": "^1.7.1",
    "twitter-text": "^3.0.1",
    "typescript": "^3.7.2",
    "videoshow": "^0.1.12",
    "winston": "^3.2.1",
    "winston-cloudwatch": "^2.3.0",
    "winston-daily-rotate-file": "^4.3.0",
    "write": "^2.0.0"
  }
}
